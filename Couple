  <div class="hearts-anim" id="hearts"></div>

  <audio id="bgMusic" loop>
    <source src="https://cdn.pixabay.com/download/audio/2022/03/15/audio_7b511b3f21.mp3?filename=romantic-background-112199.mp3" type="audio/mpeg">
  </audio>

<script>
  const out = document.getElementById('output');
  const hearts = document.getElementById('hearts');
  const music=document.getElementById('bgMusic');
  const musicBtn=document.getElementById('musicBtn');
  let isPlaying=false;

  function toggleMusic(){
    if(isPlaying){
      music.pause();
      musicBtn.textContent='Play Music 🎶';
    } else {
      music.play();
      musicBtn.textContent='Pause Music ⏸️';
    }
    isPlaying=!isPlaying;
  }

  function log(html){
    const d=document.createElement('div'); d.innerHTML=html; out.appendChild(d); out.scrollTop=out.scrollHeight;
  }
  function showTime(){
    const now=new Date();
    log(`<strong>Time:</strong> ${now.toLocaleString()}`);
  }
  const compliments=[
    'Tumhari muskaan meri duniya roshan kar deti hai 💙',
    'Tum bahut smart aur attractive ho 😍',
    'Tum meri life ka sabse khoobsurat hissa ho ✨',
    'Tumhari baatein dil ko choo jaati hain 💌'
  ];
  function showCompliment(){
    const c=compliments[Math.floor(Math.random()*compliments.length)];
    log(`<strong>Compliment:</strong> ${c}`);
  }
  function doHug(){
    for(let i=0;i<9;i++){
      const h=document.createElement('div');
      h.className='heart';
      h.style.opacity=0;
      h.innerText='💙';
      hearts.appendChild(h);
      const delay=i*120;
      setTimeout(()=>{
        h.style.opacity=1;
        h.style.transform=`translate(${(Math.random()-0.5)*220}px, ${-200 - Math.random()*140}px) scale(${1+Math.random()*0.6})`;
      },delay);
      setTimeout(()=>h.remove(),3000+delay);
    }
    log('<strong>Virtual hug sent!</strong> 🤗💙');
  }
  function coupleQuiz(){
    const q=[
      {q:'Humari sabse pehli outing kaha hui thi?', a:'Socho aur yaad karo 💙'},
      {q:'Mera favourite colour?', a:'Obviously Blue 💙'}
    ];
    const pick=q[Math.floor(Math.random()*q.length)];
    log(`<strong>Quiz:</strong> ${pick.q} — <em>${pick.a}</em>`);
  }
  async function surpriseSequence(){
    const seq=[
      'Tum mere liye sabse special ho... 💫',
      'Tumhari hasi se meri duniya chamak uthti hai ✨',
      'Har din tumhare bina adhoora lagta hai... 💙',
      '<strong style="font-size:20px;color:var(--accent)">I love you 💙</strong>'
    ];
    for(let i=0;i<seq.length;i++){
      log(seq[i]);
      await new Promise(r=>setTimeout(r,1300));
    }
  }
  document.getElementById('runBtn').addEventListener('click',async()=>{
    const boxes=Array.from(document.querySelectorAll('.task:checked')).map(x=>x.value);
    if(boxes.length===0){log('<em>Select at least one task.</em>');return;}
    for(const t of boxes){
      if(t==='time') showTime();
      else if(t==='compliment') showCompliment();
      else if(t==='hug') doHug();
      else if(t==='quiz') coupleQuiz();
      else if(t==='surprise') await surpriseSequence();
      await new Promise(r=>setTimeout(r,600));
    }
  });
  document.getElementById('resetBtn').addEventListener('click',()=>{out.innerHTML='';});
  window.addEventListener('load',()=>{
    log('Welcome! Select tasks aur enjoy karo 💙 End me hamesha ek baat: <strong>I love you</strong>');
  });
</script>
</body>
